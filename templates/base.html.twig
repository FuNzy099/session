<!DOCTYPE html>
<html>
    <head>

        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
        
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}

            <link href="{{ asset('css/stylesLayout.css') }}" type="text/css" rel="stylesheet" />
       
        {% endblock %}

        {% block javascripts %}
        
        <script src="https://kit.fontawesome.com/7d0ef989cc.js" crossorigin="anonymous"></script>
   
        {% endblock %}

    </head>

    <body>

        <header>
            <nav class="nav">

                {# Si il hexiste un user en session #}
                {% if app.user %}

                    {# Affichage du pseudo de l'utilisateur connecté #}
                    <span class="logo">{{ app.user.prenom }}</span>

                    <div class="liens">
                        <a href="{{ path('app_home') }}"> Accueil </a>
                        <a href="#"> Formation </a>
                        <a href="{{ path('showListStagiaires') }}"> Stagiaires</a>
                        <a href="{{ path('showCategorie') }}"> Catégorie</a>
                        <a href="{{ path('app_logout') }}"> Déconnexion </a>
                    </div>

                    {# Sinon #}
                    {% else %}

                    {# Affichage du logo du site #}
                    <span class="logo">Elan</span>

                    <div class="liens">
                        <a href="{{ path('app_login')}}"> Connexion </a>
                        <a href="{{ path('app_register')}}"> Inscription </a>
                    </div>

                {% endif %}
            
                {# Liens des reseaux sociaux pour le maillage externe #}
                <div class="sociales">
                    <a href="#"> <i class="fa-brands fa-facebook fa-2xl"></i> </a>
                    <a href="#"> <i class="fa-brands fa-twitter fa-2xl"></i> </a>
                    <a href="#"> <i class="fa-brands fa-square-instagram fa-2xl"></i> </a
                </div>

            </nav>
        </header>

        {% block body %}{% endblock %}

    </body>
</html>
