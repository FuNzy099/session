{% extends 'base.html.twig' %}

{% block title %} Connexion {% endblock %}


{% block stylesheets %}
    <link href="{{ asset('css/stylesLayout.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('css/stylesLogin.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}


{% block body %}

    <div id="containtLogin">

        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
        
            {# {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %} #}
        
            <div class="form">
            
                <h1 class="h3 mb-3 font-weight-normal">Connectez-vous</h1>
            
                {# Saisi de l'email #}
                <div class="champs">
                    <label for="inputEmail">Saisissez votre Email:</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                </div>
                
                {# Saisi du mot de passe #}
                <div class="champs">
                    <label for="inputPassword">Saisissez votre mot de passe:</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                </div>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >
            
                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html
            
                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}
            
                {# Bouton submit pour la connexion #}
                <button class="btn btn-lg btn-primary" type="submit">
                    Connexion
                </button>

            </div>

        </form>

    </div>

{% endblock %}
